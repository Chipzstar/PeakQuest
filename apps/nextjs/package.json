{
  "name": "@1goal/nextjs",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm with-env next build",
    "clean": "git clean -xdf .next .turbo node_modules",
    "dev": "pnpm with-env next dev",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "dotenv -v SKIP_ENV_VALIDATION=1 next lint",
    "start": "pnpm with-env next start",
    "typecheck": "tsc --noEmit",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@1goal/api": "workspace:^0.1.0",
    "@1goal/auth": "workspace:^0.1.0",
    "@1goal/db": "workspace:^0.1.0",
    "@1goal/ui": "workspace:^0.1.0",
    "@1goal/validators": "workspace:^0.1.0",
    "@t3-oss/env-nextjs": "^0.7.1",
    "@tanstack/react-query": "^5.17.7",
    "@tanstack/react-query-devtools": "^5.17.7",
    "@tanstack/react-query-next-experimental": "5.17.7",
    "@trpc/client": "next",
    "@trpc/react-query": "next",
    "@trpc/server": "next",
    "geist": "^1.2.0",
    "lucide-react": "^0.312.0",
    "next": "^14.0.4",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "superjson": "2.2.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@1goal/eslint-config": "workspace:^0.2.0",
    "@1goal/prettier-config": "workspace:^0.1.0",
    "@1goal/tailwind-config": "workspace:^0.1.0",
    "@1goal/tsconfig": "workspace:^0.1.0",
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@1goal/eslint-config/base",
      "@1goal/eslint-config/nextjs",
      "@1goal/eslint-config/react"
    ]
  },
  "prettier": "@1goal/prettier-config"
}
